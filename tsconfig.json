{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "mapRoot": "",
    "rootDir": "."
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser"
  ],
  "awesomeTypescriptLoaderOptions": {
    "declaration": false
  }
}
