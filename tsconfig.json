{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "mapRoot": "",
    "rootDir": ".",
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "node",
      "mocha"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
    "example",
    "test"
  ],
  "angularCompilerOptions": {
    "genDir": "compiled"
  }
}
